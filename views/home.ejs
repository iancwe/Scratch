<h2>Portfolio</h2>
<table class="table table-inverse table-bordered">
  <% companies.forEach(function(company,i){ %>
  <tr>
    <th rowspan="2"><%=company.name%><br><%=company.symbol%></th>
    <th>Investment:</th>
    <th>Shares Purchased:</th>
    <th>Purchased Price:</th>
    <th>Daily Average Price:</th>
    <th>Returns:</th>
    <td rowspan="2">
    <br>      
      <form action="/home/<%= company._id %>?_method=DELETE" method="post">
        <button type="submit" name="delete">Delete</button>
      </form>
    </td>
  </tr>
  <tr>
    <td>USD <%=(company.sharePurchased*company.purchasedPrice).toFixed(2)%> </td>
    <td><%=company.sharePurchased%></td>
    <td>USD <%=company.purchasedPrice%></td>
    <td>USD <%= parseFloat(dAvg[company._id]).toFixed(2)%></td>
    <% var returnEarning  = ((dAvg[company._id]*company.sharePurchased)-(company.sharePurchased*company.purchasedPrice)).toFixed(2) %>
    <% if (returnEarning > 0) { %>
      <td style='background-color: green'>USD <%=returnEarning%></td>
    <% } else if (returnEarning < 0){ %>
      <td style='background-color: red'>USD <%=returnEarning%></td>
      <% } %>
  </tr>
  <% }) %>
</table>
