<a href="/signup">Sign Up</a>
<%# <a href="/login">Log In</a>%>
<div class="container">
  <%# divs for signing up modal %>
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#sigmodal" id="signBtn">Sign Up</button>
  <div class="modal fade" id="sigmodal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h3>Sign Up</h3>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <form data-async action="/landing" method="post" id="modalSign">
          <div class="modal-body">
            <div id="modalErrorSignAlert"><h5>Sign Up Failed</h5></div>
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" name="name" id="userName">
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="text" name="email" id="userEmail">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" name="password" id="userPassword">
            </div>
            <div class="form-group">
              <label for="password">Confirm Password</label>
              <input type="password" name="confirmPassword" id="userConPassword">
            </div>
          </div>
          <div class="modal-footer"></div>
          <button class="btn btn-primary btn-block" type="submit" id="sigBtn">Create Account</button>
        </form>
      </div>
    </div>
  </div>
  <%# divs for logging in modal%>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#logmodal">Log In</button>
    <div class="modal fade" id="logmodal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Log In</h3>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <form data-async action="/landing" method="post" id="modalLog">
                  <div class="modal-body">
                    <div id="modalErrorAlert"><h5>Log In Failed</h5></div>
                          <div class="form-group">
                              <label for="email">Email</label>
                              <input type="text" name="email" id="userEmail">
                          </div>
                          <div class="form-group">
                              <label for="password">Password</label>
                              <input type="password" name="password" id="userPassword">
                          </div>
                  </div>
                  <div class="modal-footer"></div>
                  <button class="btn btn-primary btn-block" type="submit" id="logBtn">Log in</button>
                </form>
            </div>
        </div>
    </div>
</div>
